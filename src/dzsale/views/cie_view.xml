<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="dzsale_cie_form_view" model="ir.ui.view">
      <field name="name">dzsale.cie.form.view</field>
      <field name="model">dzsale.cie</field>
      <field name="arch" type="xml">
        <form string="cie">
          <sheet>

            <h1>C.I.E</h1>
            <h3>
              <div>
                <field name="name" />

              </div>
            </h3>

              <group col="2">
                <field name="company" />    
              </group>

     
          </sheet>
        </form>
      </field>
    </record>
    <record id="dzsale_cie_tree_view" model="ir.ui.view">
      <field name="name">dzsale.cie.tree.view</field>
      <field name="model">dzsale.cie</field>
      <field name="arch" type="xml">
        <tree string="cies">
          <field name="name" />
          <field name="company" />


        </tree>
      </field>
    </record>
    <record id="dzsale_cie_search_view" model="ir.ui.view">
      <field name="name">dzsale.cie.search.view</field>
      <field name="model">dzsale.cie</field>
      <field name="arch" type="xml">
        <search string="cies">
          <field name="name" />
          <field name="company" />
          <group expand="0" string="Grouper par">

          </group>
        </search>
      </field>
    </record>
    <record model="ir.actions.act_window" id="dzsale_action_cie_view">
      <field name="name">C.I.Es</field>
      <field name="res_model">dzsale.cie</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="dzsale_cie_tree_view" />
      <field name="search_view_id" ref="dzsale_cie_search_view"/>
      <field name="context">{'search_default_today':1}</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          <!--CrÃ©er votre premiere cie...-->
        </p>
      </field>
    </record>


  </data>
</openerp>